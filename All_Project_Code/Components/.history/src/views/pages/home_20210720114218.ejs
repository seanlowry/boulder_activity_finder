<% if(posts){

    var card = '<div class="row row-cols-1 row-cols-md-3 g-4">';
    posts.forEach(function(i){
        console.log(i)
        card += '<div class="card" style="width: 18rem;">';
        card += '<img src="../../resources/img/hiking.jpg" class="card-img-top" alt="..." style="height: 300;width: 330;">';
        card += '<div class="card-body">';
        if (i.title) {
          card += '<h5 class="card-title">'+i.title+'</h5>';
        }
        if (i.description) {
          card += '<p class="card-text">'+i.description+'</p>';
        }
        if (i.activity_time) {
          card += '<p class="card-text">'+i.activity_time.toString().substring(0,8) + i.activity_date.toString().substring(4,15)+'</p>';
        }
        card += '<a href="#" class="btn btn-primary" onclick="start_download('+i.activity_id+')" id="'+i.activity_id+'" data-content="'+i.title +  "&" + i.description + "&" + i.activity_date.toString().substring(4,15) + "&" + i.activity_time.toString().substring(0,8)  + '" >Download</a>';
        card += '</div>';
        card += '</div>';
    }); %>
    <% card += '</div>'; %>
    <%- card %>
<%}%>

